CREATE TABLE Revista_Empreestimo (
    ID INT PRIMARY KEY,
    colecao VARCHAR,
    edicao INT,
    ano DATE,
    cor VARCHAR,
    etiqueta INT,
    numero INT,
    data_saida DaTE,
    data_retorno DATE,
    fk_Amigo_ID INT
);

CREATE TABLE Amigo (
    ID INT PRIMARY KEY,
    nome VARCHAR,
    nome_mae VARCHAR,
    telefone_conhecido INT(11),
    localidade_conhecido VARCHAR
);
 
ALTER TABLE Revista_Empreestimo ADD CONSTRAINT FK_Revista_Empreestimo_2
    FOREIGN KEY (fk_Amigo_ID)
    REFERENCES Amigo (ID)
    ON DELETE CASCADE;

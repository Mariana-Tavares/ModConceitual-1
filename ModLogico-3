CREATE TABLE Teste (
    ID INT PRIMARY KEY,
    data DATE,
    numeracao_questoes INT,
    disciplina VARCHAR
);

CREATE TABLE Questoes (
    ID INT PRIMARY KEY,
    texto VARCHAR,
    materia VARCHAR,
    gabarito VARCHAR
);
CREATE TABLE Disciplina (
    ID INT PRIMARY KEY,
    nome VARCHAR,
    fk_Teste_ID INT,
    fk_materia_ID INT
);

CREATE TABLE materia (
    ID INT PRIMARY KEY,
    nome VARCHAR
);

CREATE TABLE Serie (
    ID INT PRIMARY KEY,
    fk_materia_ID INT
);

CREATE TABLE Auto_Rel__2 (
    fk_Teste_ID INT,
    fk_Questoes_ID INT
);
 
ALTER TABLE Disciplina ADD CONSTRAINT FK_Disciplina_2
    FOREIGN KEY (fk_Teste_ID)
    REFERENCES Teste (ID)
    ON DELETE RESTRICT;
 
ALTER TABLE Disciplina ADD CONSTRAINT FK_Disciplina_3
    FOREIGN KEY (fk_materia_ID)
    REFERENCES materia (ID)
    ON DELETE RESTRICT;
 
ALTER TABLE Serie ADD CONSTRAINT FK_Serie_2
    FOREIGN KEY (fk_materia_ID)
    REFERENCES materia (ID)
    ON DELETE RESTRICT;
ALTER TABLE Auto_Rel__2 ADD CONSTRAINT FK_Auto_Rel__2_1
    FOREIGN KEY (fk_Teste_ID)
    REFERENCES Teste (ID)
    ON DELETE RESTRICT;
 
ALTER TABLE Auto_Rel__2 ADD CONSTRAINT FK_Auto_Rel__2_2
    FOREIGN KEY (fk_Questoes_ID)
    REFERENCES Questoes (ID)
    ON DELETE RESTRICT;
